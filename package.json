{
  "name": "socialsox",
  "version": "0.3.1",
  "description": "A simple, local-only web application for posting short messages to Mastodon, Twitter, and Bluesky simultaneously.",
  "main": "main.js",
  "scripts": {
    "dev": "npx vite",
    "start": "electron .",
    "build": "npx vite build && electron-builder --publish=never",
    "test": "node test/sync.test.js",
    "test:watch": "nodemon --watch test --exec 'npm test'"
  },
  "keywords": [
    "mastodon",
    "twitter",
    "bluesky",
    "social media",
    "cross-posting"
  ],
  "author": "Andr√© Klein (https://github.com/burninc0de/socialsox)",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "copilot": "^0.0.2",
    "lucide": "^0.554.0",
    "sharp": "^0.34.5",
    "twitter-api-v2": "^1.28.0"
  },
  "build": {
    "appId": "com.socialsox.app",
    "productName": "SocialSox",
    "icon": "appicon.png",
    "asarUnpack": [
      "**/node_modules/sharp/**",
      "**/node_modules/@img/**"
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "tray.png",
      "tray-mac.png",
      "appicon.png",
      "!dist/**/*",
      "!dist-electron/**/*",
      "!build/**/*",
      "!*.md",
      "!package-lock.json",
      "!vite.config.js",
      "!electron-mock.js",
      "!node_modules/@emnapi/**"
    ],
    "extraResources": [
      {
        "from": "tray.png",
        "to": "tray.png"
      },
      {
        "from": "tray-mac.png",
        "to": "tray-mac.png"
      },
      {
        "from": "appicon.png",
        "to": "appicon.png"
      },
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
