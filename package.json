{
  "name": "socialsox",
  "version": "1.0.0",
  "description": "A simple, local-only web application for posting short messages to Mastodon, Twitter, and Bluesky simultaneously.",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "electron:dev": "npx electron . --enable-logging",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "server": "node server.js"
  },
  "keywords": [
    "mastodon",
    "twitter",
    "bluesky",
    "social media",
    "cross-posting"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17"
  },
  "dependencies": {
    "@atproto/api": "^0.18.1",
    "sharp": "^0.34.5",
    "twitter-api-v2": "^1.28.0"
  },
  "build": {
    "appId": "com.socialsox.app",
    "productName": "SocialSox",
    "icon": "appicon.png",
    "asarUnpack": [
      "**/node_modules/sharp/**",
      "**/node_modules/@img/**"
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!build/**/*",
      "!*.md",
      "!package-lock.json"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
